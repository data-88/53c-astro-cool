---
import { changeLanguage } from "i18next";
import Layout from "@layouts/Layout.astro";
import Container from "@components/container.astro";
import Sectionhead from "@components/sectionhead.astro";
import Pricing from "@components/pricing.astro";
import Logos from "@components/logos.astro";
import Faq from "@components/faq.astro";

changeLanguage("en");

const pricingData = [
    {
        name: "Hourly Rate",
        price: "$200",
        popular: false,
        features: ["Initial Assesment", "Risk Conversation", "Policy creation (IOT, Privacy)", "OSINT (Open Source intelligence)", "Phishing Email analysis", "DNS investigation"],
        button: {
            text: "Get Started",
            link: "/contact",
        },
    },
    {
        name: "Security-as-a-Service",
        price: {
            monthly: "$10,000",
            annual: "$100,000",
        },
        popular: true,
        features: [
            "Research",
            "Disaster recovery planning",
            "20 Custom domains",
            "Unlimited Collaborators",
            "Advanced Integrations",
            "Priority Support",
        ],
        button: {
            text: "Get Started",
            link: "#",
        },
    },
    {
        name: "Enterprise",
        price: "Custom",
        popular: false,
        features: ["Multi-vector business enablers", "", "Outcomes and Objectives based", "Custom Solutions", "24/7 Phone Support"],
        button: {
            text: "Contact us",
            link: "/contact",
        },
    },
];
---

<Layout title="Pricing">
	<Container>
		<Sectionhead>
			<Fragment slot="title">Pricing</Fragment>
			<Fragment slot="desc">Affordable Excellence: See Our Pricing.</Fragment>
		</Sectionhead>

		<div class="grid md:grid-cols-3 gap-10 mx-auto max-w-4xl mt-20">
			{pricingData.map((item) => <Pricing plan={item} />)}
		</div>
		<!-- <Logos /> -->
		<Faq />
	</Container>
</Layout>
